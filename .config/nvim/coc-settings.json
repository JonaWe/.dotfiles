{
  "eslint.autoFixOnSave": true,
  "eslint.format.enable": true,
  "diagnostic.checkCurrentLine": true,
  "languageserver": {
    "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "index": {
                  "onChange": true
                },
                "hightlight": {
                  "lsRanges": true
                }
            }
        }
  }
}
